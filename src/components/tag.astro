---
interface Props {
  category: string;
  route: string;
}

const { category, route } = Astro.props;
---

<a
  class="inline-block px-4 py-1 border border-gray-500 rounded-3xl sm:mr-6 mr-0 cursor-pointer text-sm font-light text-gray-600 dark:text-gray-400 dark:border-gray-400 transition transform hover:border-gray-800 hover:text-gray-800 ease-in-out duration-300 hover:dark:border-gray-200 hover:dark:text-gray-200"
  href={route}>{category}</a
>
